# ==========================================
# CONFIGURACIÓN DE LA API
# ==========================================

# Información de la API
API_TITLE=Sistema de Predicción de Complicaciones Obstétricas
API_DESCRIPTION=API para predecir riesgo de sepsis, hipertensión gestacional y hemorragia posparto
API_VERSION=1.0.0
API_PREFIX=/api/v1

# ==========================================
# RUTAS Y CONFIGURACIÓN DE MODELOS
# ==========================================

# Directorio base del proyecto (se calcula automáticamente, no necesita estar en .env)
# BASE_DIR se calcula en config.py como Path(__file__).resolve().parent.parent.parent

# Directorio de modelos entrenados (relativo a BASE_DIR)
MODELS_DIR=modelos_entrenados

# Nombres de archivos de modelos entrenados
MODEL_SEPSIS=riesgo_sepsis__DecisionTree.joblib
MODEL_HIPERTENSION_GESTACIONAL=riesgo_hipertension_gestacional__DecisionTree.joblib
MODEL_HEMORRAGIA_POSPARTO=riesgo_hemorragia_posparto__DecisionTree.joblib

# ==========================================
# BASE DE DATOS
# ==========================================

# PostgreSQL Connection (del pod de Kubernetes aluna-db-pod)
# Formato: postgresql://usuario:contraseña@host:puerto/nombre_db
# Usuario: chris | DB: chris_db | Puerto: 5434 (host) -> 5432 (container)
DATABASE_URL=postgresql://chris:maGazine1!@localhost:5434/chris_db

# CORS - Orígenes permitidos (JSON array como string)
# En desarrollo: ["*"]
# En producción: ["https://tu-dominio.com", "https://app.tu-dominio.com"]
CORS_ORIGINS=["*"]

# Límites
MAX_BATCH_SIZE=100

# Logging
LOG_LEVEL=INFO

# Umbrales de clasificación
UMBRAL_RIESGO_ALTO=0.7
UMBRAL_RIESGO_MODERADO=0.5
UMBRAL_RIESGO_BAJO=0.3

UMBRAL_CONFIANZA_ALTA=0.8
UMBRAL_CONFIANZA_BAJA=0.6